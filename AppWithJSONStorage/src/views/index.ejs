<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
  </head>
  <body>
    <h1>Product Page</h1>
    <p>Welcome to the product page!</p>
    <form id="formSearch">
      <input type="text" name="name" id="productName" placeholder="Product Name" />
      <input type="submit" value="Search" />
    </form>
    <div id="resultsContainer"></div>
    <script>
      document.getElementById("formSearch").addEventListener("submit", async function (e) {
          e.preventDefault();

          const name = document.getElementById("productName").value;
            const resultsContainer = document.getElementById("resultsContainer");
          const url = `/items/search?name=${encodeURIComponent(name)}`;

          try {
            const response = await fetch(url);
            if (!response.ok) throw new Error("Item not found");

           
            const items = await response.json();
         
            resultsContainer.innerHTML = `
            <h2>Search Results:</h2>
            <ul>${items.map(item => `<li>${item.name}</li>`).join('')}</ul>`;
          } catch (error) {
            alert(error.message);
          }
        });
    </script>
  </body>
</html>
