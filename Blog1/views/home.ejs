<%- include("partials/header") %>
    <div class="flex justify-between items-center mb-6 ">
        <h1 class="text-4xl font-bold">Hello</h1>
        <button class="bg-emerald-500 px-4 py-2 rounded-md text-white hover:bg-emerald-600"><a
                href="/compose">COMPOSE</a></button>
    </div>

    <%= startingContent %>
    <% if (posts.length > 0) { %>
        <p class="mt-6 text-xl py-2">Recent Posts</p>
    <% } %>
    <% posts.forEach(post => { %>
        <div class="border border-gray-300 rounded-md p-4 mb-4">
            <h2 class="text-xl font-semibold mb-2"><%= post.title %></h2>
            <% if (post.body.length > 100) { %>
                <p class="text-lg"><%= post.body.substring(0, 300) + "..." %></p>
                <div class="flex justify-left gap-4 items-center mt-4">
                    <a class="text-emerald-500 hover:underline" href="/posts/<%= post.title %>">Read More</a>
                    <button class="like-button bg-emerald-500 px-3 py-1 rounded-md text-white hover:bg-emerald-600" data-post-id="<%= post.id %>" type="button">Like: <span class="like-count"><%= post.likes %></span></button>
                </div>
            <% } else { %>
                <p class="text-lg"><%= post.body %></p>
                <div class="flex justify-left gap-4 items-center mt-4">
                    <button class="like-button bg-emerald-500 px-3 py-1 rounded-md text-white hover:bg-emerald-600" data-post-id="<%= post.id %>" type="button">Like: <span class="like-count"><%= post.likes %></span></button>
                </div>
            <% } %>
        </div>
    <% }); %>

<script src="/like.js"></script>
<%- include("partials/footer") %>